<% provide(:title, 'Contact') %>
<h1>Contact Us</h1>

<%= flash[:notice] %>
<div class="container">
<%= form_tag("/static_pages/thank_you") do %>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= text_field_tag(:name,nil, class: "form-control", placeholder: "Enter Name") %>
      </div>        
      <div class="form-group">
        <%= text_field_tag(:email,"Email Address", class: "form-control", placeholder: "Enter Email") %>
      </div>
      <div class="form-group">
        <%= text_area_tag(:message,nil, class: "form-control", placeholder: "Enter Message") %>
      </div>        
    </div>
  </div>
  <%= submit_tag("Send",class:"btn btn-default") %>   
<% end %>
</div><!--container end-->