<%if notice %>
    <p class="alert alert-success" role="alert"><%= notice %></p>
    <% end%>
    <%if alert %>
    <p class="alert alert-danger" role="alert"><%= alert %></p>
    <% end %>

<div class="container">

<div class="row">
    <div class="col-sm-6 col-md-6">
      <div class="thumbnail thaumbnail-img-col">
        <img src="<%= @product.image_url %>" alt="product image">
        <div class="caption">
          <h3>Name:<%= @product.name %></h3>
        </div>
      </div>
    </div>
    
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail price-col">
        <!--comment ratings-->
        <p>
         <strong>Highest rating:</strong>
          <%= @product.highest_rating_comment.rating %>
          <%= @product.highest_rating_comment.body %>
        </p>
        <p>
         <strong>Lowest rating:</strong>
          <%= @product.lowest_rating_comment.rating %>
          <%= @product.lowest_rating_comment.body %>
        </p>
        <div>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>">
        </div> 
        </div>
         <!-- comment end-->
         

        <h3><span class="glyphicon glyphicon-usd"></span><%= @product.price %></h3>

        <div class= "product-color">
         <strong>Color:</strong>
         <%= @product.colour %>
        </div>
        <div>
          <%= form_with(url: '/charges/create') do |form| %>
          <%= hidden_field_tag(:product_id, @product.id)%>
          <%= render  "shared/stripe_checkout_button" %>
          <% end %>
        </div>
      </div>

    </div><!--col end-->
  </div><!--row end-->
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>About Product</h3>
      <p><%= @product.description %></p>
    </div>
  </div><!--row ends-->
  <div class ="reviews">
  
       <%= render 'new_comment' %>
      </div>
  <%= render 'comments' %>

  
  <%= paginate @comments %>


  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>
  
</div><!--container end-->


