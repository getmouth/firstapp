<%if notice %>
    <p class="alert alert-success" role="alert"><%= notice %></p>
    <% end%>
    <%if alert %>
    <p class="alert alert-danger" role="alert"><%= alert %></p>
    <% end %>

<div class="container">

<div class="row">
    <div class="col-sm-6 col-md-6">
      <div class="thumbnail">
        <img src="<%= @product.image_url %>" alt="product image">
        <div class="caption">
          <h3>Name:<%= @product.name %></h3>
        </div>
      </div>
    </div>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail price-col">
      <div class ="reviews">
       <p><%= @product.highest_rating_comment %></p>
       <p><%= @product.lowest_rating_comment %></p>
      </div>
        <h4><span class="glyphicon glyphicon-usd"></span><%= @product.price %></h4>
        <div class= "product-color">
         <strong>Color:</strong>
         <%= @product.colour %>
        </div>
        <div>
          <p><a href="#" class="btn btn-danger btn-block btn-all-color" role="button">Buy</a>
        </div>
      </div>
    </div><!--col end-->
  </div><!--row end-->
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h4>About Product</h4>
      <p><%= @product.description %></p>
    </div>
  </div><!--row ends-->
  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>
  
</div><!--container end-->


