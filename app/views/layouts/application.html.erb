
<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> | Firstapp</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
   
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale =1">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  
    <%= csrf_meta_tags %>
  </head>
  <body data-target=".navbar">
    <div class="page-wrap">
    <!--navigation starts-->
    <nav class ="navbar navbar-custom" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type= "button" class="navbar-toggle" data-toggle="collapse" data-target="navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <div class="navbar-brand">
            <a href="#"><%= image_tag("icon.png", size: "40")%></a>
          </div><!--navbar-brand ends-->
        </div><!--navbar-header ends-->
        <div class="collapse navbar-collapse navbar-right">
          <ul class="nav navbar-nav" role="navigation">
            <!--nav-links here-->
            <li class="active"><%= link_to "Home", landing_path %></li>
            <li><%= link_to "Products", products_path %></li>
            <li><%= link_to "About", about_path %></li>
            <li><%= link_to "Contact", contact_path %></li>
            <li> <%= form_tag( '/products', method: 'get',class:'navbar-form') do %>
              <div class="form-group">
                <%= text_field_tag(:q, nil, class:'form-control', placeholder:'Search')  %>
                <%= submit_tag('Search', class:'btn btn-default') %>
                <% end %>
              </div><!--form-group end-->
            </li>
            <li>
            <% if user_signed_in? %>
            <%= link_to('Logout', destroy_user_session_path, method: :delete ) %>
            <% else %>
            <%= link_to('Login', new_user_session_path) %>
            <% end %> 
            </li>
          </ul>
        </div><!--nav-links ends-->
      </div><!--container-fluid ends-->
    </nav> <!--navigation ends-->


    <%= yield %>
     <!--flash notification tags-->
     <%if notice %>
    <p class="alert alert-success" role="alert"><%= notice %></p>
    <% end%>
    <%if alert %>
    <p class="alert alert-danger" role="alert"><%= alert %></p>
    <% end %>
    <!--flash notification tags end-->
    </div><!--page-wrap-->
  <footer class="footer">
    <div class="container">
      &copy; 2017 Bike Berlin
    </div>
  </footer>
  </body>
</html>
